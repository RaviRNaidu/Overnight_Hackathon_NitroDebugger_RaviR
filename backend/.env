# Database Configuration
DATABASE_URL=postgresql://postgres:6361@localhost:5432/farmer_portal

# Application Settings
SECRET_KEY=your-secret-key-here-change-in-production

# SMS Configuration - Choose ONE provider and set SMS_PROVIDER accordingly

# Option 1: Twilio (International, reliable but paid)
# Sign up at: https://www.twilio.com/try-twilio
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Option 2: Fast2SMS (India-based, easier setup, supports Indian numbers)
# Sign up at: https://www.fast2sms.com (Free credits available)
# SMS_PROVIDER=fast2sms
# FAST2SMS_API_KEY=your_api_key_here
# FAST2SMS_SENDER_ID=FSTSMS

# Option 3: MSG91 (India-based, enterprise solution)
# SMS_PROVIDER=msg91
# MSG91_AUTH_KEY=your_auth_key_here
# MSG91_SENDER_ID=MSGIND

# SMS Settings
SMS_ENABLED=false
# Set to 'true' when you configure your SMS provider
